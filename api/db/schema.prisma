datasource DS {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
  previewFeatures = ["createMany"]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  createdAt DateTime @default(now())
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model User {
  id       Int      @id @default(autoincrement())
  userName String   @unique
  email    String   @unique
  name     String
  Ticket   Ticket[]
}

model Ticket {
  id     Int     @id @default(autoincrement())
  number String  @unique
  title  String?
  User   User?   @relation(fields: [userId], references: [id])
  userId Int?
  Cmbd   Cmdb?   @relation(fields: [cmdbId], references: [id])
  cmdbId Int?
}

model Cmdb {
  id     Int     @id @default(autoincrement())
  number String  @unique
  title  String?
  Ticket   Ticket[]
}